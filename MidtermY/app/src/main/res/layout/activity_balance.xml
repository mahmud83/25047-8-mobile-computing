<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.afagarap.midtermy.BalanceActivity">

    <Button
        android:id="@+id/checkBalanceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Balance"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/accountPinEditText"
        android:layout_marginLeft="125dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/mAccountBalanceLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance: "
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBalanceButton"
        android:layout_marginLeft="125dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/accountPinEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Pin"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="85dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/mAccountBalanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/mAccountBalanceLabelTextView"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBalanceButton" />

</android.support.constraint.ConstraintLayout>
