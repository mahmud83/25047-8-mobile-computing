<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.afagarap.agarapfinalexamy.TriangularActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        
        <EditText
            android:id="@+id/textInputNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a number from 1-10"
            android:inputType="number"/>
        
        <Button
            android:id="@+id/btnCompute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textInputNumber"
            android:text="Compute"/>

        <Button
            android:id="@+id/btnDisplayAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnCompute"
            android:text="Display All"/>

        <TextView
            android:id="@+id/textResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btnDisplayAll"
            android:text="Result:"
            android:textSize="16pt"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
