<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.afagarap.prelimagarapafternoon.GuessNumberActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/textGuessInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a number from 1-20"
            android:inputType="number"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textGuessNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textGuessInput"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:text="Guess a Number"
            android:textSize="16pt"/>

        <Button
            android:id="@+id/btnTry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textGuessInput"
            android:text="Try"/>

        <Button
            android:id="@+id/btnReveal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnTry"
            android:text="Reveal"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
